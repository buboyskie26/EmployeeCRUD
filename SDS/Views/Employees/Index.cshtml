

@model IEnumerable<SDS.Models.Entities.Employee>

@{
    ViewBag.Title = "Employee List";
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Page Title</title>

    <!-- Link to your CSS file -->
    @*<link rel="stylesheet" href="~/Scripts/css/table_style.css" />*@

    <!-- Other head elements if needed -->
</head>


<h2 class="text-center">Employee List</h2>
<section class="intro">
    <div class="gradient-custom-1 h-100">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <a href="@Url.Action("Create", "Employees")" class="mb-3 btn btn-success">⊕ Add Employee</a>
                        <div class="table-responsive bg-white">
                            <table class="table mb-0 table-hover table-responsive-md table-striped">
                                <thead style="background-color:#808080; color:whitesmoke" class="text-center">
                                    <tr>
                                        <th scope="col">Employee No.</th>
                                        <th scope="col">Firstname</th>
                                        <th scope="col">Lastname</th>
                                        <th scope="col">Birthdate</th>
                                        <th scope="col">Contact No.</th>
                                        <th scope="col">Email Address</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                
                                <tbody>
                                    @if (Model.Count() > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr class="text-center">
                                                <td>@item.EmpNo</td>
                                                <td>@item.FirstName</td>
                                                <td>@item.LastName</td>
                                                <td>@item.BirthDate.ToString("MMMM dd, yyyy")</td>
                                                <td>@item.ContactNo</td>
                                                <td>@item.EmailAddress</td>
                                                <td>
                                                    @Html.ActionLink("✐", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
                                                    <a class="btn btn-danger" onclick="employeeRemoval('@item.ID', '@item.EmpNo')">🗑</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <h3 class="text-end">No employee data.</h3>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<link href="~/Scripts/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Scripts/sweetalert2/sweetalert2.min.js"></script>




<script>
    var employeeRemoval = function (id, employeeId) {

        console.log(id)

        Swal.fire({
            title: `Do you want to delete Employee No. ${employeeId}?`,
            text: 'Note: This action cannot be undone.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: "POST",
                    url: "/Employees/DeleteJSON?id=" + id,
                    @*url: '@Url.Action("DeleteJSON", "Employees")' + '?id=' + id,*@
                    success: function (result) {
                        console.log(result);
                        // var message = "selected student has been deleted successfully. student id: " + result.id;
                        var message = `Employee No. ${employeeId} has been deleted.`;
                        Swal.fire({
                            title: message,
                            icon: 'info',
                            onAfterClose: () => {
                                location.reload();
                            }
                        });
                    },
                    error: function (xhr, status, error) {
                        /*console.log("xhr:", xhr.responseText);*/
                        console.log("status:", status);
                        console.log("error:", error);
                        // Handle the error accordingly
                    }
                });
            }
        });
    };
</script>
